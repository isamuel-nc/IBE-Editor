{
  "schemaVersion": 1,
  "id": "ibeeditor",
  "version": "${version}",
  "name": "IBE Editor",
  "description": "Simple GUI Mod to edit an item, a block or an entity in your current world",
  "authors": [
    "skyecodes"
  ],
  "contact": {
    "email": "contact@skye.codes",
    "homepage": "https://modrinth.com/mod/ibe-editor",
    "issues": "https://github.com/skyecodes/IBE-Editor/issues",
    "sources": "https://github.com/skyecodes/IBE-Editor"
  },
  "license": "MIT",
  "icon": "logo.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "com.skyecodes.ibeeditor.fabric.IBEEditorFabric"
      }
    ]
  },
  "mixins": [
    "ibeeditor.mixins.json",
    "ibeeditor-common.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14",
    "fabric": "*",
    "fabric-language-kotlin": "*",
    "minecraft": ">=1.20.2",
    "java": ">=17"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/upWJQGd"
      }
    }
  }
}
